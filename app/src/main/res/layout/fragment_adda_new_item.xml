<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1eece"
    tools:context="com.example.hp.budgetplanner.AddaNewItemFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="510dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="190dp"
        android:background="@drawable/categorylayback"
        android:orientation="vertical"
        android:layout_height="500dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Category"
            android:textColor="#8f228f"
            android:textStyle="italic|bold"
            android:textSize="28dp"
            android:id="@+id/categoryname1"
            android:background="#dd82e3"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/categorylist"></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/subcategorylistback"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="SubCategory"
            android:textColor="#816a20"
            android:background="#fad473"
            android:id="@+id/subcategoryname"
            android:textStyle="italic|bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/subcategorylist"></ListView>
    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add New Expense"
        android:textSize="26dp"
        android:drawableLeft="@drawable/addexpense"
        android:textColor="#5c963e"
        android:id="@+id/additembutton"
        android:background="#d1e893"
        android:textAllCaps="false"/>
</LinearLayout>
