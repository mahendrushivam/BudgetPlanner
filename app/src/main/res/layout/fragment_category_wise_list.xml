<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.budgetplanner.CategoryWiseList">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:background="@drawable/roundrectangle2">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/addicon1"
        android:id="@+id/categoryicon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#99cccc"
            android:id="@+id/category"
        android:layout_marginTop="20dp"
        android:textSize="22dp"

        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:text="Category Name"
        android:background="@drawable/categorynameback"/>
</LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="15dp"
        android:id="@+id/listview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/roundrectangle"></ListView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/roundrectangle2"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/addicon2"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:longClickable="false"
        android:focusable="false"
        android:background="#738b94"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#738B94"
        android:text="Add"
        android:id="@+id/addbut"
        android:paddingLeft="-140dp"
        android:textAllCaps="false"
        android:textColor="#99cccc"
        android:textSize="34dp"/>

</LinearLayout>
</LinearLayout>

