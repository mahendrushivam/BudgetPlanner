<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d6a719"
    tools:context="com.example.hp.budgetplanner.ResetPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/viewdetailss">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/resetpasswordlogo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Reset Password"
            android:paddingTop="10dp"
            android:textColor="#f0e739"
            android:paddingLeft="8dp"
            android:textSize="28dp"
            android:layout_marginTop="20dp"
            android:background="#6eb0b0"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/resetpassword">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#d6a719"
                android:hint="Current Password"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/lockkey"
                android:inputType="textPassword"
                android:id="@+id/currentpassword"
                android:textSize="24dp"
                android:textColor="#aa8c34"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#d6a719"
                android:hint=" New Password"
                android:id="@+id/newpassword"
                android:drawableLeft="@drawable/lockkey"
                android:inputType="textPassword"
                android:textSize="24dp"
                android:textColor="#aa8c34"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#d6a719"
                android:hint=" Re-enter Password"
                android:drawableLeft="@drawable/lockkey"
                android:id="@+id/confirmpassword"
                android:inputType="textPassword"
                android:textSize="24dp"
                android:textColor="#aa8c34"/>
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="120dp"
                    android:id="@+id/locksubmit"
                    android:src="@drawable/locksubmit"/>
        </LinearLayout>
</LinearLayout>
