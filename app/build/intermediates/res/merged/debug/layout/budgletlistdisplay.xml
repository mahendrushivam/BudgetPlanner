<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/budgetlist2"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/budgetlisting"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Hello World"
        android:textColor="#4288af"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:background="@drawable/budgetlistback"
        android:id="@+id/budgetname"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="#7991b1"
            android:id="@+id/popupoption"
            android:src="@mipmap/popupmenuicon"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <TextView
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:text="Budget Amount :: Rs. "
        android:textStyle="italic"
        android:textColor="#c0de7b"
        android:textSize="22dp"
       />
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="0dp"
            android:textStyle="italic"
            android:textColor="#c0de7b"
            android:textSize="22dp"
            android:id="@+id/budgetamount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-8dp"
        android:text="Month :: "
        android:textStyle="italic"
        android:textColor="#c0de7b"
        android:textSize="24dp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-8dp"
            android:textStyle="italic"
            android:textColor="#c0de7b"
            android:textSize="24dp"
            android:id="@+id/monthname"/>

    </LinearLayout>

</LinearLayout>