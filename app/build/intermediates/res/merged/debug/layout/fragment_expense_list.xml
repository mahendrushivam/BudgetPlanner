<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#edb6db"
    tools:context="com.example.hp.budgetplanner.ExpenseListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/expenselistback1"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/food2"
            android:id="@+id/catexpimage"
            ></ImageView>
        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/expensecategory"
            android:text="budgetname"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textSize="22dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/budgetreportdetailsback1"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/progressexp"
        android:progressDrawable="@drawable/progressbarstyling"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#cfc6e4"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginLeft="60dp"
            android:text="Amount Left :: Rs"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:id="@+id/expamountleft"
            android:text="5000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="-10dp"
        android:background="#e699b2">
        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginLeft="40dp"
            android:text="Amount Spent :: Rs"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:id="@+id/expamountspent"
            android:text="5000"/>
    </LinearLayout>
    ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#edb6db"
        android:layout_marginTop="10dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:id="@+id/expenselist"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="7dp"></ListView>

    </LinearLayout>

</LinearLayout>
