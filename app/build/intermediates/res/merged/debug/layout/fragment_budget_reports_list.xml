<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7dea9"
    android:orientation="vertical"
    tools:context="com.example.hp.budgetplanner.BudgetReportsList">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#7991b1"
    android:orientation="horizontal">
    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="  Month"
        android:drawableLeft="@drawable/month"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:background="@drawable/budgetlistback"
        android:textSize="28dp"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:id="@+id/month"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/budgetlistback"></Spinner>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/budgetlist"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/budgetlistback"></ListView>
    </LinearLayout>
   

</LinearLayout>
