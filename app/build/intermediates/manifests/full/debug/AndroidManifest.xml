<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.budgetplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/budgetplannericon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="com.example.hp.budgetplanner.ImageSlider"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.hp.budgetplanner.LoginMainActivity" />
        <activity android:name="com.example.hp.budgetplanner.RegisterMainActivity" />
        <activity android:name="com.example.hp.budgetplanner.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.hp.budgetplanner.Checkfragment" >
        </activity>
        <activity android:name="com.example.hp.budgetplanner.CheckRegisterLayout" />
        <activity
            android:name="com.example.hp.budgetplanner.LoggedInMainActivity"
            android:label="@string/title_activity_logged_in_main"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>